{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es3",
    "moduleResolution": "node",
    "sourceMap": true,
    "pretty": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "lib": [
      "es2015"
    ],
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ]
}